<UserControl x:Class="GCS.Views.RcChannelsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="480">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#1C2128"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2D333D"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#8B949E"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#3FB950"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#FF9500"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#9C27B0"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#39D0D8"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F85149"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <!-- Header -->
            <TextBlock Text="RC INPUT" 
                      Foreground="{StaticResource SecondaryText}"
                      FontSize="11"
                      FontWeight="Bold"
                      Margin="5,5,5,10"/>

            <!-- Status Bar -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,10"
                    Margin="5,0,5,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Channel Count -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="CHANNELS" Foreground="{StaticResource SecondaryText}"
                                  FontSize="9" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ChannelCount}" Foreground="{StaticResource AccentCyan}"
                                  FontSize="20" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- RSSI -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="RSSI" Foreground="{StaticResource SecondaryText}"
                                  FontSize="9" FontWeight="Bold"/>
                        <TextBlock Text="{Binding RssiPercent}" FontSize="20" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Rssi}" Value="255">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!-- Last Update -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock Text="LAST UPDATE" Foreground="{StaticResource SecondaryText}"
                                  FontSize="9" FontWeight="Bold"/>
                        <TextBlock Text="{Binding LastUpdate}" Foreground="{StaticResource PrimaryText}"
                                  FontSize="11" FontFamily="Consolas"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Stick Visualization -->
            <Border Background="{StaticResource CardBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="5,0,5,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Stick (Throttle/Yaw) -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="LEFT STICK" Foreground="{StaticResource SecondaryText}"
                                  FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <Border Background="#0D1117" CornerRadius="8" Width="120" Height="120">
                            <Canvas>
                                <!-- Grid lines -->
                                <Line X1="60" Y1="5" X2="60" Y2="115" Stroke="#2D333D" StrokeThickness="1"/>
                                <Line X1="5" Y1="60" X2="115" Y2="60" Stroke="#2D333D" StrokeThickness="1"/>
                                <!-- Stick indicator - positioned via code-behind or converter -->
                                <Ellipse x:Name="LeftStickDot" Width="20" Height="20" Fill="{StaticResource AccentOrange}"
                                        Canvas.Left="50" Canvas.Top="50"/>
                            </Canvas>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <TextBlock Text="THR" Foreground="{StaticResource AccentOrange}" FontSize="9" FontWeight="Bold"/>
                            <TextBlock Text=" / " Foreground="{StaticResource SecondaryText}" FontSize="9"/>
                            <TextBlock Text="YAW" Foreground="{StaticResource AccentPurple}" FontSize="9" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Stick (Roll/Pitch) -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="RIGHT STICK" Foreground="{StaticResource SecondaryText}"
                                  FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <Border Background="#0D1117" CornerRadius="8" Width="120" Height="120">
                            <Canvas>
                                <!-- Grid lines -->
                                <Line X1="60" Y1="5" X2="60" Y2="115" Stroke="#2D333D" StrokeThickness="1"/>
                                <Line X1="5" Y1="60" X2="115" Y2="60" Stroke="#2D333D" StrokeThickness="1"/>
                                <!-- Stick indicator -->
                                <Ellipse x:Name="RightStickDot" Width="20" Height="20" Fill="{StaticResource AccentBlue}"
                                        Canvas.Left="50" Canvas.Top="50"/>
                            </Canvas>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <TextBlock Text="ROLL" Foreground="{StaticResource AccentBlue}" FontSize="9" FontWeight="Bold"/>
                            <TextBlock Text=" / " Foreground="{StaticResource SecondaryText}" FontSize="9"/>
                            <TextBlock Text="PITCH" Foreground="{StaticResource AccentGreen}" FontSize="9" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Primary Channels (1-4) as Large Cards -->
            <TextBlock Text="PRIMARY CONTROLS" Foreground="{StaticResource SecondaryText}"
                      FontSize="10" FontWeight="Bold" Margin="5,5,5,5"/>

            <Grid Margin="5,0,5,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CH1 Roll -->
                <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource CardBackground}"
                        BorderBrush="{StaticResource AccentBlue}" BorderThickness="1"
                        CornerRadius="6" Padding="10" Margin="2">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="CH1 ROLL" Foreground="{StaticResource AccentBlue}" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Channels[0].RawValue}" HorizontalAlignment="Right"
                                      Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                        </Grid>
                        <Border Background="#0A0E14" CornerRadius="3" Height="12" Margin="0,6,0,0">
                            <Grid>
                                <Rectangle Width="1" Fill="#4A5568" HorizontalAlignment="Center"/>
                                <Border Background="{StaticResource AccentBlue}" CornerRadius="3"
                                       HorizontalAlignment="Left" Opacity="0.8"
                                       Width="{Binding Channels[0].NormalizedValue, Converter={StaticResource PercentToWidthConverter}}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- CH2 Pitch -->
                <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource CardBackground}"
                        BorderBrush="{StaticResource AccentGreen}" BorderThickness="1"
                        CornerRadius="6" Padding="10" Margin="2">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="CH2 PITCH" Foreground="{StaticResource AccentGreen}" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Channels[1].RawValue}" HorizontalAlignment="Right"
                                      Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                        </Grid>
                        <Border Background="#0A0E14" CornerRadius="3" Height="12" Margin="0,6,0,0">
                            <Grid>
                                <Rectangle Width="1" Fill="#4A5568" HorizontalAlignment="Center"/>
                                <Border Background="{StaticResource AccentGreen}" CornerRadius="3"
                                       HorizontalAlignment="Left" Opacity="0.8"
                                       Width="{Binding Channels[1].NormalizedValue, Converter={StaticResource PercentToWidthConverter}}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- CH3 Throttle -->
                <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource CardBackground}"
                        BorderBrush="{StaticResource AccentOrange}" BorderThickness="1"
                        CornerRadius="6" Padding="10" Margin="2">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="CH3 THROTTLE" Foreground="{StaticResource AccentOrange}" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Channels[2].RawValue}" HorizontalAlignment="Right"
                                      Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                        </Grid>
                        <Border Background="#0A0E14" CornerRadius="3" Height="12" Margin="0,6,0,0">
                            <Border Background="{StaticResource AccentOrange}" CornerRadius="3"
                                   HorizontalAlignment="Left" Opacity="0.8"
                                   Width="{Binding Channels[2].NormalizedValue, Converter={StaticResource PercentToWidthConverter}}"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- CH4 Yaw -->
                <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource CardBackground}"
                        BorderBrush="{StaticResource AccentPurple}" BorderThickness="1"
                        CornerRadius="6" Padding="10" Margin="2">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="CH4 YAW" Foreground="{StaticResource AccentPurple}" FontSize="10" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Channels[3].RawValue}" HorizontalAlignment="Right"
                                      Foreground="{StaticResource PrimaryText}" FontSize="14" FontWeight="Bold" FontFamily="Consolas"/>
                        </Grid>
                        <Border Background="#0A0E14" CornerRadius="3" Height="12" Margin="0,6,0,0">
                            <Grid>
                                <Rectangle Width="1" Fill="#4A5568" HorizontalAlignment="Center"/>
                                <Border Background="{StaticResource AccentPurple}" CornerRadius="3"
                                       HorizontalAlignment="Left" Opacity="0.8"
                                       Width="{Binding Channels[3].NormalizedValue, Converter={StaticResource PercentToWidthConverter}}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Auxiliary Channels (5-18) -->
            <TextBlock Text="AUXILIARY CHANNELS" Foreground="{StaticResource SecondaryText}"
                      FontSize="10" FontWeight="Bold" Margin="5,5,5,5"/>

            <ItemsControl ItemsSource="{Binding Channels}" Margin="5,0,5,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBackground}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,5"
                                Margin="2"
                                Visibility="{Binding ChannelNumber, Converter={StaticResource ChannelVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="45"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding ChannelLabel}" 
                                          Foreground="{StaticResource SecondaryText}"
                                          FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>

                                <Border Grid.Column="1" Background="#0A0E14" CornerRadius="2" Height="8" Margin="4,0">
                                    <Border CornerRadius="2" HorizontalAlignment="Left" Opacity="0.7">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding BarColor}"/>
                                        </Border.Background>
                                        <Border.Width>
                                            <Binding Path="NormalizedValue" Converter="{StaticResource PercentToWidthConverter}"/>
                                        </Border.Width>
                                    </Border>
                                </Border>

                                <TextBlock Grid.Column="2" Text="{Binding RawValue}" 
                                          Foreground="{StaticResource PrimaryText}"
                                          FontSize="10" FontFamily="Consolas" 
                                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
